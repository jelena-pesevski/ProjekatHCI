<Window x:Class="ProjekatHCI.ConfirmationBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjekatHCI"
        xmlns:prop="clr-namespace:ProjekatHCI.Util"
        mc:Ignorable="d"
         Title="{prop:LocalizationExtension confirmationBox}" SizeToContent="WidthAndHeight" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid >
        <Label Content="{prop:LocalizationExtension confirmUpdateMsg}" Margin="10,18,13,39" />
        <Button Content="{prop:LocalizationExtension yesBtn}"   Click="Yes_Button_Click" Margin="75,58,71,15" Width="50" />
        <Button Content="{prop:LocalizationExtension noBtn}"   Click="No_Button_Click" HorizontalAlignment="Right" Width="50" Margin="80,58,10,15"  />
    </Grid>
</Window>
