<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:ProjekatHCI.Resources.Themes">

   
    <Style TargetType="Window" x:Key="LoginStyle" >
        <Setter Property="Background" Value="#f2e6c7" />
        <Style.Resources>
            <Style TargetType="{x:Type Label}">
                <Setter Property="FontWeight" Value="DemiBold"/>
                <Setter Property="FontSize" Value="15" />
                <Setter Property="FontFamily" Value="Cambria"/>
            </Style>
            <Style TargetType="{x:Type ComboBox}">

                <Setter Property="FontFamily" Value="Cambria"/>

            </Style>
            <Style TargetType="{x:Type TextBlock}">
                <Setter Property="FontFamily" Value="Cambria"/>
            </Style>

            <Style TargetType="{x:Type Button}">
                <Setter Property="Background" Value="White" />
                <Setter Property="FontSize" Value="15" />
                <Setter Property="FontFamily" Value="Cambria"/>
                <Style.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Style.Resources>

            </Style>
        </Style.Resources>
    </Style>

    <Style TargetType="Window" x:Key="MainWindowStyle">
        <Setter Property="Background" Value="#f2e6c7" />
        <Setter Property="ResizeMode" Value="CanMinimize"/>
        <Style.Resources>
            <Style TargetType="{x:Type DataGridRow}">
                <Style.Resources>
                    <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#f2e6c7" />
                    <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="#f2e6c7" />
                    <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="Black" />
                    <SolidColorBrush x:Key="{x:Static SystemColors.ControlTextBrushKey}" Color="Black" />
                </Style.Resources>
            </Style>

            <Style TargetType="TabControl">
                <Style.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Style.Resources>
            </Style>

            <Style TargetType="DataGrid">
                <Setter Property="Background" Value="#f2ecd3"/>
                <Setter Property="Margin" Value="2" />
                <Setter Property="FontFamily" Value="Cambria"/>
                <Setter Property="CanUserResizeRows" Value="False"/>
            </Style>

            <Style TargetType="{x:Type Label}">
                <Setter Property="FontWeight" Value="Medium"/>
                <Setter Property="FontSize" Value="15" />
                <Setter Property="FontFamily" Value="Cambria"/>
            </Style>
            <Style TargetType="{x:Type ComboBox}">

                <Setter Property="FontFamily" Value="Cambria"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="Background" Value="#f2e6c7"/>
                
            </Style>
            <Style TargetType="{x:Type TextBlock}">
                <Setter Property="FontFamily" Value="Cambria"/>
            </Style>


            <Style TargetType="{x:Type Button}">
                <Setter Property="Background" Value="White" />
                <Setter Property="FontSize" Value="15" />
                <Setter Property="FontFamily" Value="Cambria"/>
                <Style.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Style.Resources>
            </Style>

            <Style TargetType="{x:Type Button}" x:Key="SmallerTextBtn">
                <Setter Property="Background" Value="White" />
                <Setter Property="FontSize" Value="12" />
                <Setter Property="FontFamily" Value="Cambria"/>
                <Style.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Style.Resources>
            </Style>
        </Style.Resources>


    </Style>

</ResourceDictionary>